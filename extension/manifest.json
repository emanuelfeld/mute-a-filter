{
    "manifest_version": 2,
    "name": "Mute-a-Filter",
    "version": "0.3",
    "description": "A filter for MetaFilter comments.",
    "author": "Emanuel Feld",
    "background": {
        "scripts": [
            "js/background.js"
        ]
    },
    "content_scripts": [
        {
            "js": [
                "js/index.js"
            ],
            "matches": [
                "https://*.metafilter.com/*"
            ],
            "run_at": "document_end"
        }
    ],
    "web_accessible_resources": [
        "js/index.js"
    ],
    "permissions": [
        "storage"
    ]
}
